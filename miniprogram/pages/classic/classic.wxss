/* miniprogram/pages/classic.wxss */
.container{
  display:flex;
  flex-direction: column;
  align-items:center;
}
.header{
 width:100%;
 height:100rpx;
 display:flex;
 justify-content: space-between;
 align-items: center;
}
.header .like{
 margin-left:40rpx;
}
.header episode{
 margin-left:20rpx;
}
.navi{
  position:absolute;
  bottom:20rpx;
}
.header-right{
 display:flex;
 justify-content: space-between;
 align-items: center;
 margin-right:40rpx;
}
.share{
 position: relative;
 width:40rpx;
 height:40rpx;
 margin-left:20rpx;
 background:transparent;
}
.share image{
 position:absolute;
 top:0;
 left:0;
 width:100%;
 height:100%;
}