/* miniprogram/pages/book-detail/book-detail.wxss */

.container {
 background: #f5f5f5;
}

.header {
 display: flex;
 flex-direction: column;
 align-items: center;
 background: #fff;
 margin-bottom: 20rpx;
 padding: 30rpx 10rpx;
}

.header-img {
 width: 200rpx;
 height: 300rpx;
 box-shadow: 0 6rpx 6rpx #999;
}

.header .title {
 font-size: 38rpx;
}

.header .author {
 font-size: 28rpx;
 color: #999;
}

.sub-container {
 display: flex;
 flex-direction: column;
 align-items: center;
 background: #fff;
 margin-bottom: 20rpx;
 padding: 30rpx 30rpx;
}

.sub-container .title {
 font-size: 30rpx;
 margin-bottom: 20rpx;
}

.comment-box {
 display: flex;
 flex-direction: row;
 flex-wrap: wrap;
}

.comment-box w-tag {
 margin: 0 16rpx 16rpx 0;

}

.comment-box .nums {
 font-size: 20rpx;
 color: #bbb;
}

.summary {
 font-size: 28rpx;
 color: #666;
 text-indent: 58rpx;
}
.sub-container w-tag:nth-child(1)>view {
 background-color: #fffadd !important;
}

.sub-container w-tag:nth-child(2)>view {
 background-color: #eefaff !important;
}
.info-container{
 width:100%;
 display:flex;
 flex-direction: column;
 align-items: flex-start;
}
.info-container view>text:nth-child(1) {
 color: #999999;
 font-size: 24rpx;
}

.info-container view>text:nth-child(2) {
 color: #666666;
 font-size: 24rpx;
 margin-left: 10rpx;
}
.short-comment{
 position:fixed;
 bottom:0;
 left:0;
 width:690rpx;
 height:88rpx;
 display:flex;
 flex-direction: row;
 justify-content: space-between;
 align-items: center;
 background-color:#fff;
 box-shadow: 0 -1px 1px #e3e3e3;
 padding: 0 30rpx;
}
.short-comment .input{
 width:405rpx;
 height:56rpx;
 border-radius:30rpx;
 border:1px solid #000;
 padding-left:30rpx;
}
.input text{
 font-size:24rpx;
}
.fake-container{
 width:100%;
 position:fixed;
 bottom:0;
 z-index:99;
 background-color:#fff;
 display:flex;
 flex-direction: column;
 align-items: center;
}

.handle{
 width:690rpx;
 padding:0 30rpx;
 display:flex;
 flex-direction: row;
 justify-content: space-between;
 align-items:center;
 height:100rpx;
 
}
.line{
 width:100%;
 border-bottom:1px solid #999;
 margin-bottom:30rpx;
}
.handle text{
 font-size:34rpx;
}
.handle .cancel{
 color:#999999;
}

input {
 width:694rpx;
 height:68rpx;
 background:#f5f5f5;
 border-radius:30rpx;
 margin:30rpx 0;
}
.placeholder-class{
 font-size:28rpx;
 color:#999999;
 padding-left:30rpx;
}

.fake-container .comment-box{
 width:690rpx;
 padding:0 30rpx;
}
