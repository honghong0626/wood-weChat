/* miniprogram/pages/book/book.wxss */

.container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.search-container {
  position: fixed;
  z-index: 99;
  top: 0;
  width: 100%;
  height: 110rpx;
  background: #fff;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  box-shadow: 0 0 6rpx 2rpx #e3e3e3;
}

.search-container .box {
  width: 690rpx;
  height: 68rpx;
  background-color: #f7f7f7;
  border-radius: 30rpx;
  text-align: Center;
  line-height: 68rpx;
  margin-top: 10rpx;
 
}

.search-container image {
  width: 28rpx;
  height: 28rpx;
  margin-right: 10rpx;
}

.search-container text {
  font-size: 28rpx;
  color: #999;
}

.sub-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  margin-top: 110rpx;
  background-color: #f9f9f9;
}

.head-img {
  width: 108rpx;
  height: 34rpx;
  margin: 20rpx 0;
}

.book-box {
  margin-top: 10rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
  padding: 0 90rpx;
}
.book-box w-book{
  margin-bottom:30rpx;
}
